import textwrap

def menu():
    return input(textwrap.dedent("""
    \n========== MENU ==========
    [d] Depositar
    [s] Sacar
    [e] Extrato
    [nu] Novo Usu치rio
    [nc] Nova Conta
    [lc] Listar Contas
    [q] Sair
    => """))

def depositar(saldo, valor, extrato):
    if valor > 0:
        saldo += valor
        extrato += f"Dep칩sito: R$ {valor:.2f}\n"
        print("Dep칩sito realizado com sucesso!")
    else:
        print("Opera칞칚o falhou! Valor inv치lido.")
    return saldo, extrato

def sacar(*, saldo, valor, extrato, limite, numero_saques, limite_saques):
    if valor > saldo:
        print("Opera칞칚o falhou! Saldo insuficiente.")
    elif valor > limite:
        print("Opera칞칚o falhou! Valor excede o limite.")
    elif numero_saques >= limite_saques:
        print("Opera칞칚o falhou! N칰mero m치ximo de saques atingido.")
    elif valor > 0:
        saldo -= valor
        extrato += f"Saque: R$ {valor:.2f}\n"
        numero_saques += 1
        print("Saque realizado com sucesso!")
    else:
        print("Opera칞칚o falhou! Valor inv치lido.")
    return saldo, extrato, numero_saques

def exibir_extrato(saldo, extrato):
    print("\n========== EXTRATO ==========")
    print("Sem movimenta칞칫es." if not extrato else extrato)
    print(f"\nSaldo atual: R$ {saldo:.2f}")
    print("==============================")

def criar_usuario(usuarios):
    cpf = input("Informe o CPF (somente n칰meros): ")
    if filtrar_usuario(cpf, usuarios):
        print("Usu치rio com esse CPF j치 existe!")
        return

    nome = input("Informe o nome completo: ")
    data_nascimento = input("Informe a data de nascimento (dd-mm-aaaa): ")
    endereco = input("Informe o endere칞o (logradouro, n칰mero - bairro - cidade/UF): ")

    usuarios.append({
        "nome": nome,
        "data_nascimento": data_nascimento,
        "cpf": cpf,
        "endereco": endereco
    })
    print("Usu치rio criado com sucesso!")

def filtrar_usuario(cpf, usuarios):
    return next((usuario for usuario in usuarios if usuario["cpf"] == cpf), None)

def criar_conta(agencia, numero_conta, usuarios, contas):
    cpf = input("Informe o CPF do usu치rio: ")
    usuario = filtrar_usuario(cpf, usuarios)

    if not usuario:
        print("Usu치rio n칚o encontrado. Crie um usu치rio primeiro.")
        return

    # Verifica se o CPF j치 possui uma conta
    for conta in contas:
        if conta["usuario"]["cpf"] == cpf:
            print("Este usu치rio j치 possui uma conta.")
            return

    conta = {
        "agencia": agencia,
        "numero_conta": numero_conta,
        "usuario": usuario
    }
    contas.append(conta)
    print("Conta criada com sucesso!")

def listar_contas(contas):
    if not contas:
        print("Nenhuma conta cadastrada.")
        return

    print("\n====== CONTAS CADASTRADAS ======")
    for conta in contas:
        print(f"Ag칡ncia: {conta['agencia']}")
        print(f"Conta: {conta['numero_conta']}")
        print(f"Titular: {conta['usuario']['nome']} | CPF: {conta['usuario']['cpf']}")
        print("----------------------------------")

def main():
    LIMITE_SAQUES = 3
    AGENCIA = "0001"

    saldo = 0
    limite = 500
    extrato = ""
    numero_saques = 0
    usuarios = []
    contas = []

    while True:
        opcao = menu()

        if opcao == "d":
            valor = float(input("Informe o valor do dep칩sito: "))
            saldo, extrato = depositar(saldo, valor, extrato)

        elif opcao == "s":
            valor = float(input("Informe o valor do saque: "))
            saldo, extrato, numero_saques = sacar(
                saldo=saldo,
                valor=valor,
                extrato=extrato,
                limite=limite,
                numero_saques=numero_saques,
                limite_saques=LIMITE_SAQUES
            )

        elif opcao == "e":
            exibir_extrato(saldo, extrato)

        elif opcao == "nu":
            criar_usuario(usuarios)

        elif opcao == "nc":
            numero_conta = len(contas) + 1
            criar_conta(AGENCIA, numero_conta, usuarios, contas)

        elif opcao == "lc":
            listar_contas(contas)

        elif opcao == "q":
            print("游낁 Obrigado por usar nosso sistema. At칠 logo!")
            break

        else:
            print("Op칞칚o inv치lida. Tente novamente.")

if __name__ == "__main__":
    main()
